<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".EditProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/editProfil"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="@color/teal_700"
        app:shapeAppearanceOverlay="@style/circular"
        app:srcCompat="@drawable/person" />

    <EditText
        android:padding="10dp"
        android:id="@+id/editAd"
        android:layout_marginTop="10dp"
        android:background="@drawable/editext_background"
        android:hint="Ad"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>



    <EditText
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/editSoyad"
        android:background="@drawable/editext_background"
        android:hint="Soyad"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <EditText
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/ediGirisYili"
        android:background="@drawable/editext_background"
        android:hint="Giriş Yılı"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <EditText
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/editMezunYili"
        android:background="@drawable/editext_background"
        android:hint="Mezun Yılı"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <EditText
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/editMail"
        android:background="@drawable/editext_background"
        android:hint="E-posta"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <EditText
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/editSifre"
        android:background="@drawable/editext_background"
        android:hint="Şifre"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <EditText
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/editEgitim"
        android:background="@drawable/editext_background"
        android:hint="Eğitim (Lisans/Yüksek Lisans/Doktora)"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <EditText
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/editSosyalMedya"
        android:background="@drawable/editext_background"
        android:hint="Sosyal Medya"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <EditText
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/editIletisimMail"
        android:background="@drawable/editext_background"
        android:hint="İletişim Mail"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <EditText
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/editIletisimTel"
        android:background="@drawable/editext_background"
        android:hint="İletişim Telefon"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <EditText
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/editUlke"
        android:background="@drawable/editext_background"
        android:hint="Ülke"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <EditText
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/editSehir"
        android:background="@drawable/editext_background"
        android:hint="Şehir"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <EditText
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/editFirma"
        android:background="@drawable/editext_background"
        android:hint="Firma"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <Button
        android:id="@+id/editProfile"
        android:backgroundTint="@color/teal_700"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text="GÜNCELLE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>